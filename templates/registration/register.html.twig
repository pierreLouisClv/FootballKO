{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    {{ form_start(registrationForm) }}
<section class="container my-3" style="width:60%">
    <div class="row justify-content-center">
        <div class="col">
            <h1 class="h3 mb-3 font-weight-normal">Page d'inscription</h1>

            <div class="mb-3 details">Page réservée aux administrateurs du site</div>

            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>

        <button type="submit" class="btn btn-light">S'enregistrer</button>
    {{ form_end(registrationForm) }}
        </div>
    </div>
</section>
{% endblock %}
