{% extends asset('base.html.twig') %}


{% block main_content %}

<h3 class="h1 pb-3 text-center">Ajouter un club</h3>

{{ form_start(form) }}

<div class="row d-flex flex-column justify-content-center" style="width:50%">

    <div class="form-group">
        {{ form_label(form.clubName, 'Nom du club') }}
        {{ form_widget(form.clubName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.cityName, 'Nom de la ville') }}
        {{ form_widget(form.cityName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.championship, 'Championnat') }}
        {{ form_widget(form.championship, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-group d-flex justify-content-center">
        {{ form_label(form.submit, 'Cr√©er') }}
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-light'}}) }}
    </div>
</div>

{{ form_widget(form) }}

{{ form_end(form) }}

{% endblock %}