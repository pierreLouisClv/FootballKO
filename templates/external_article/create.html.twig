{% extends asset('base.html.twig') %}


{% block main_content %}

    <h3 class="h1 pb-3 text-center">Ajouter un article extérieur</h3>
    <h1 class="h3 pb-3 text-center">{{ article.championship }}</h1>

    {{ form_start(form) }}

    <div class="row justify-content-center">

        <div class="col-md-12">

            <div class="form-group">
                {{ form_label(form.name, 'Titre') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.link, 'Lien') }}
                {{ form_widget(form.link, {'attr': {'class': 'form-control'}}) }}
            </div>

            <!-- <div class="form-group">
                {# {{ form_label(form.introduction, 'Intro') }}
                {{ form_widget(form.introduction, {'attr': {'class': 'form-control'}}) }} #}
            </div> -->

            <div class="form-group">
                {{ form_label(form.publication_date, 'Date de publication') }}
                {{ form_widget(form.publication_date, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.info, 'Info affichée') }}
                {{ form_widget(form.info, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.club, 'Club associé ?') }}
                {{ form_widget(form.club, {'attr': {'class': 'form-select'}}) }}
            </div>

            <div class="form-group d-flex justify-content-center">
                {{ form_label(form.submit, 'Créer') }}
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-light'}}) }}
            </div>

        </div>
    </div>

    {{ form_widget(form) }}

    {{ form_end(form) }}

{% endblock %}