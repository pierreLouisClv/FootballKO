{% extends asset('base.html.twig') %}


{% block main_content %}

    <h3 class="h1 pb-3 text-center">Ajouter un joueur</h3>
    <h1 class="h3 pb-3 text-center">{{ team.clubName }}</h1>

    {{ form_start(form) }}

    <div class="row justify-content-center">

        <div class="col-md-6">
            <h1 class="h5 pb-2">Joueur</h1>

            {% include 'player/form/player.html.twig' %}
        </div>

        <div class="col-md-6">

            <h1 class="h5 pb-2">Blessure</h1>

            {% include 'player/form/injury.html.twig' %}

            <div class="form-group d-flex justify-content-center">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-light'}}) }}
            </div>

        </div>
    </div>

{{ form_widget(form) }}

{{ form_end(form) }}

{% endblock %}